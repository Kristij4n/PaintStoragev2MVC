@model PaintStoragev2MVC.Models.PaintDB
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "PaintDB", FormMethod.Post))
{
    @Html.HiddenFor(model => model.PaintID)
    <div class="form-group">
        @Html.LabelFor(model => model.RAL, new { @class = "control-label" })
        @Html.EditorFor(model => model.RAL, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Storage, new { @class = "control-label" })
        @Html.EditorFor(model => model.Storage, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
}

